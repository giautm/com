#!/usr/bin/env bash

set -eEuo pipefail

ROOT="$(cd "$(dirname "$0")/.." &>/dev/null; pwd -P)"
ALL_SERVICES="lunch-bot"

if [ -z "${PROJECT_ID:-}" ]; then
  echo "âœ‹ Missing PROJECT_ID!" >&2
  exit 1
fi

if [ -z "${REGION:-}" ]; then
  echo "âœ‹ Missing REGION!" >&2
  exit 1
fi

if [ -z "${SERVICES:-}" ]; then
  echo "âœ‹ Missing SERVICES!" >&2
  exit 1
fi

if [ -z "${TAG:-}" ]; then
  echo "âœ‹ Missing TAG!" >&2
  exit 1
fi

if [ "${SERVICES}" == "all" ]; then
  SERVICES="${ALL_SERVICES}"
  echo "ðŸš§ Deploying all services! (${SERVICES})" >&2
fi

IFS=',' read -ra SERVICES_ARR <<< "${SERVICES}"
for SERVICE in "${SERVICES_ARR[@]}"; do
  gcloud builds submit --no-source \
    --project "${PROJECT_ID}" \
    --config "${ROOT}/builders/deploy.yaml" \
    --substitutions "_REGION=${REGION},_SERVICE=${SERVICE},_TAG=${TAG}" \
    &
done

wait
